def find_max_min(arr):
    max_val = float('-inf')
    min_val = float('inf')
    
    for num in arr:
        if num > max_val:
            max_val = num
        if num < min_val:
            min_val = num
    
    return min_val, max_val

# Test cases
print("Test Case 1:")
N = 8
a = [5, 7, 3, 4, 9, 12, 6, 2]
min_val, max_val = find_max_min(a)
print(f"Input: N = {N}, a = {a}")
print(f"Output: Min = {min_val}, Max = {max_val}")

print("\nTest Case 2:")
N = 9
a = [1, 3, 5, 7, 9, 11, 13, 15, 17]
min_val, max_val = find_max_min(a)
print(f"Input: N = {N}, a = {a}")
print(f"Output: Min = {min_val}, Max = {max_val}")

print("\nTest Case 3:")
N = 10
a = [22, 34, 35, 36, 43, 67, 12, 13, 15, 17]
min_val, max_val = find_max_min(a)
print(f"Input: N = {N}, a = {a}")
print(f"Output: Min = {min_val}, Max = {max_val}")
